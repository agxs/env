let mapleader=" "

map <HOME> _

vmap J :m '>+1<CR>gv=gv
vmap K :m '<-2<CR>gv=gv

xnoremap < <gv
xnoremap > >gv

xmap <leader>p \"_dP

nmap <leader>y \"+y
vmap <leader>y \"+y
nmap <leader>Y \"+Y

nmap <leader>d \"_d
vmap <leader>d \"_d

imap <C-c> <Esc>

nmap <leader>s :%s/\<<C-r><C-w>\>/<C-r><C-w>/gI<Left><Left><Left>

nmap <leader>a <action>(AddToHarpoon)

set incsearch
set scrolloff=8
