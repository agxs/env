[alias]
  co = checkout
  br = branch
  st = status
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  bl = blame -w -C -C -C
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"

[core]
  pager = delta
  autocrlf = input
  excludesfile = ~/.gitignore
